<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyBooksFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_margin="12sp"
        android:elevation="4dp"
        android:background="@drawable/drop_shadow" >

        <ImageView
            android:id="@+id/book_item_image"
            android:layout_width="77sp"
            android:layout_height="77sp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:background="@color/tempPhotoBackground"/>

        <TextView
            android:id="@+id/book_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="13dp"
            android:text="Book Title"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/book_item_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/book_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="4dp"
            android:text="Author Name"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/book_item_image"
            app:layout_constraintTop_toBottomOf="@+id/book_item_title" />

        <TextView
            android:id="@+id/book_item_isbn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="4dp"
            android:text="ISBN"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/book_item_image"
            app:layout_constraintTop_toBottomOf="@+id/book_item_author" />

        <ImageView
            android:id="@+id/book_item_status"
            android:layout_width="22sp"
            android:layout_height="22sp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/status_circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Add Book Button   -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/add_book_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/fab_content_desc"
        app:backgroundTint="@color/colorPrimary"
        app:borderWidth="0dp"
        app:srcCompat="@android:drawable/ic_input_add"
        app:tint="@android:color/white" />

</FrameLayout>